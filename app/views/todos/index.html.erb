<p id="notice"><%= notice %></p>

<h1>Todos</h1>

<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Image</th>
      <th>Completed</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @todos.each do |todo| %>
      <tr>
        <td><%= todo.title %></td>
        <td><img src="<%= todo.image %>" alt="photo"></td>
        <% if todo.completed == true %>
          <td><%= link_to "Completed", remove_complete_todo_path(todo), method: :patch, class:"btn btn-primary" %></td>
        <% else %>
          <td><%= link_to "Not Completed", complete_todo_path(todo), method: :patch, class:"btn btn-danger" %></td>
        <% end %>
        <td><%= link_to 'Show', todo %></td>
        <td><%= link_to 'Edit', edit_todo_path(todo) %></td>
        <td><%= link_to 'Destroy', todo, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

